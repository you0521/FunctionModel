<?xml version="1.0" encoding="utf-8"?><!--自定义加载框的样式   //背景色-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_100"
    android:layout_height="@dimen/qb_px_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical">

    <com.ljkj.common.View.loding.LoadingIndicatorView
        android:id="@+id/pb_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        />

    <TextView
        android:id="@+id/tv_load_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_marginBottom="@dimen/qb_px_5"
        android:text="加载中..."
        android:layout_centerHorizontal="true"
        android:textColor="#424242"
        android:textSize="@dimen/qb_px_15" />
</RelativeLayout>

