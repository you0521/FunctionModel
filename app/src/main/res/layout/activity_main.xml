        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_gravity="center"
        android:text="打开相机"/>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/qb_px_100"
